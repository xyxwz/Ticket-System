!!! html
html
  head
    title TxSSC Ticket System

    - if (process.env.NODE_ENV === 'production')
      script(data-main="js/release/main", src="js/release/libs/require/require-jquery.js")
    - else
      script(data-main="js/main", src="js/libs/require/require-jquery.js")

    link(rel="stylesheet", href="css/foundation.2.1.4.min.css")
    link(rel="stylesheet", href="css/app.css")

    meta(name="viewport", content="width=device-width,initial-scale=1")
    meta(name="X-Auth-Token", content=token)

    script(type='text/javascript')
      var openTickets = !{openTickets};
      var closedTickets = !{closedTickets};
      var currentUser = !{currentUser};
      var users = !{users};

  body

    #border

    .container

      header.row

      #main(role='main')
