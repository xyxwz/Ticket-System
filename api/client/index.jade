!!! html
html(manifest=(process.env.NODE_ENV === 'production' ? 'manifest.appcache': ''))
  head
    title TxSSC Ticket System
    meta(name="viewport", content="width=device-width,initial-scale=1")

    - if (process.env.TYPEKIT)
      script(src="http://use.typekit.com/#{process.env.TYPEKIT}.js")
      script(type='text/javascript')
        try{Typekit.load();}catch(e){}

    - if (process.env.NODE_ENV === 'production')
      script(src="js/release/bundle.js")
      link(rel="stylesheet", href="css/bundle.css")
    - else
      script(data-main="js/main", src="js/libs/require/require-jquery.js")
      link(rel="stylesheet/less", type="text/css", href="css/less/main.less")
      script(src="js/libs/less-1.3.3.min.js", type="text/javascript")

    script
      window.ticketer = window.ticketer || {};
      window.ticketer.currentUser = {
        id: "#{user.id}",
        name: "#{user.name}",
        access_token: "#{user.access_token}",
        role: "#{user.role}"
      };

  body
    header

    #main(role="main")
      #panel-one.scrollable(role="panel-one")
      #panel-two.scrollable(role="panel-two")
      #panel-divider(role="divider")
      #panel-three.scrollable(role="panel-three")